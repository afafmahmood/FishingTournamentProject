@model IEnumerable<FishingTournament02.Models.Events>


@{
    if (Model.Count() < 1)
    {
        <p>No events in database yet.</p>
    }
    else
    {
        <h3>All Events</h3>
        <div class="table-responsive">
            <table border="1" class="table table-striped table-hover">

                <tr>
                    <th>Event Name</th>
                    <th>Event Address</th>
                    <th>Event City</th>
                    <th>Event State</th>
                    <th>Event ZipCode</th>
                    <th>Event Phone</th>
                    <th>Event Capacity</th>
                    <th>Event URL</th>
                    <th>Event Cost</th>
                    <th>Register</th>
                </tr>
                @foreach (var events in Model)
                {
                    <tr>
                        <td>@events.EventName</td>
                        <td>@events.EventAddress</td>
                        <td>@events.EventCity</td>
                        <td>@events.EventState</td>
                        <td>@events.EventZipCode</td>
                        <td>@events.EventPhone</td>
                        <td>@events.EventCapacity</td>
                        <td><a href="http://@events.EventURL">@events.EventURL</a></td>
                        <td>@events.EventCost</td>
                        <td><a asp-controller ="Account" asp-action="EventRegister"
                            asp-route-id="@events.EventID">Register</a></td>

                    </tr>
                }
            </table>
        </div>

    }
}

