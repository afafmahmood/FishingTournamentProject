@model FishingTournament02.Models.MessageSent
<p class="text-info lead" Fill out all fields ></p>
<h2>Contact Us</h2>
<form asp-controller="Home" asp-action="ContactUs" method="post" class="form-horizontal">

    <div>
        <label asp-for="Name">Name:</label>
        <input type="text" asp-for="Name" />
    </div>
    <div>
        <label asp-for="Email">Email Address:</label>
        <input type="text" asp-for="Email" />
    </div>
    <div>
        <label asp-for="Message">Enter your message:</label>
        <textarea asp-for="Message"></textarea>
    </div>

    <p><a asp-controller="Home" asp-action="MessageSent">Send</a></p>


</form>
<style>
    label {
        cursor: pointer;
        display: inline-block;
        padding: 3px 6px;
        text-align: right;
        width: 150px;
        vertical-align: top;
    }

    input {
        font-size: inherit;
    }
</style>