@model FishingTournament02.Models.ContactUs
<p class="text-info lead" Fill out all fields ></p>
<h2>Contact Us</h2>
<form asp-controller="Home" asp-action="ContactUs" method="post" class="form-horizontal">

        <div>
            <label asp-for="Name">Name:</label>
            <input type="text" asp-for="Name" />
        </div>
        <div>
            <label asp-for="Email">Email Address:</label>
            <input type="text" asp-for="Email" />
        </div>
        <div>
            <label asp-for="Message">Enter your message:</label>
            <textarea asp-for="Message"></textarea>
        </div>
        <button type="submit">Send</button>
    </form>
