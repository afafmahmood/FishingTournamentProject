@model FishingTournament02.ViewModels.RoleAddUserRoleViewModel
<h1>Pick a role for @Model.User.UserName</h1>

<form asp-controller="Role" asp-action="AddUserRole" method="post">
    <div asp-validation-summary="All"></div>
    <input asp-for="@Model.User.Id" type="hidden" />
    <label asp-for="Role"></label>
    <select asp-for="Role" asp-items="@Model.RoleList"></select>
    <br />
    <button type="submit">Assign Role</button>
</form>
<p><a asp-controller="Admin" asp-action="AllUser">Back to user list</a></p>
