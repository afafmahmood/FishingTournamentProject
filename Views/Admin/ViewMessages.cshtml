@model IEnumerable<FishingTournament02.Models.ContactUs>
@{
    if (Model.Count() < 1)
    {
        <p>No messages in database yet.</p>
    }
    else
    {
        <h3>All Messages</h3>
        <div class="table-responsive">
            <table border="1" class="table table-striped table-hover">

                <tr>
                    <th>Message ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Message</th>
                </tr>
                @foreach (var contactUs in Model)
                {
                    <tr>
                        <td>@contactUs.Id</td>
                        <td>@contactUs.Name</td>
                        <td>@contactUs.Email</td>
                        <td>@contactUs.Message</td>
                    </tr>
                }
            </table>
        </div>
    }
}
<p><a asp-controller="Admin" asp-action="Index">Back to Home</a></p>


