@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    if (Model.Count() < 1)
    {
        <p>No user in database yet.</p>
    }
    else
    {
        <h3>All Users</h3>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <tr>
                    <th>User Name</th>
                    <th>Add Role</th>
                </tr>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <a asp-controller="Admin"
                               asp-action="AddUserRole"
                               asp-route-id="@user.Id">
                                Add a role
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <p><a asp-controller="Admin" asp-action="Index">Back to Administration Home</a></p>
    }
}
